{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["api", "client"],
  "exclude": ["node_modules", "public"]
}
